{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "sourceMap": false,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule":true,
    "esModuleInterop":true,
    "outDir": "build",
    "moduleResolution":"node" ,
    "skipLibCheck": true,
    "isolatedModules": true,
    
    
  },

    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}